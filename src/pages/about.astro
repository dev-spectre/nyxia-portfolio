---
import EvenSection from "../components/EvenSection.astro";
import PrimaryButton from "../components/PrimaryButton.astro";
import SecondaryTitle from "../components/SecondaryTitle.astro";
import TitleCard from "../components/TitleCard.astro";
import ImageContainer from "../components/ImageContainer.astro";
import ManUsingLaptop from "../assets/man-using-laptop-indoor.avif";
import Main from "../layouts/Main.astro";

const year = new Date().getFullYear().toString();
---

<Main>
  <header class="container mx-auto grid grid-cols-1 place-items-center px-5 py-52 text-center text-white">
    <div class="flex items-center gap-1 rounded-lg border border-white/5 bg-white/10 px-1 py-1 capitalize">
      <div class="bg-primary-500 rounded-md px-2 py-1 text-sm font-extrabold">
        {year}
      </div>
      <span>Dig deep about us</span>
    </div>
    <h2 class="mt-5 max-w-5xl text-4xl capitalize sm:text-5xl md:text-6xl lg:text-[5rem]"><div>Learn more about Nyxia</div> <div>lets's deep dive!</div></h2>
    <p class="mt-7 mb-7 max-w-[500px] text-pretty text-white/60">Nyxia is your go-to agency for creative thinking and marketing ideas. We specialise in digital business solutions.</p>
    <PrimaryButton content="Connect with us" link="/contact" />
  </header>
  <section class="container mx-auto mb-32 flex flex-wrap-reverse justify-between gap-10 px-5 text-white/60">
    <ImageContainer imgSrc={ManUsingLaptop.src} alt="A man using laptop" className="w-xl" />
    <div>
      <TitleCard title="About Nyxia" />
      <SecondaryTitle main="An agency with" sub="professional skills!" />
      <div class="my-7 max-w-md">
        <p class="mb-2 text-white">At Nyxia</p>
        <p>We believe in empowering our clients to achieve their goals. Our team works with passion to ensure your satisfaction.</p>
      </div>
      <div class="my-7 h-[1px] max-w-md -translate-x-16 bg-gradient-to-l from-transparent via-white/10 to-transparent"></div>
      <div class="my-7 max-w-md">
        <p class="mb-2 text-white capitalize">Partners you can rely on</p>
        <p>Nyxia is here to help you with the success and expert guidance with best teamwork.</p>
      </div>
      <div class="my-7">
        <PrimaryButton link="/contact" content="Book an appointment" />
      </div>
    </div>
  </section>
  <div class="container mx-auto mb-52 px-5 text-white/60">
    <EvenSection
      primaryTitle="Team members"
      secondaryTitleMain="Meet the team making"
      secondaryTitleSub="things happen every day"
      content="Our team is made up of passionate professionals who bring their expertise and creativity to every project."
      buttonLink="/contact"
      buttonText="Book a 15-min call"
    />
  </div>
  <div class="relative isolate container mx-auto mt-16 -mb-2 flex justify-center">
    <div class="bg-primary-500 absolute top-0 -z-10 h-32 w-[70%] blur-3xl"></div>
    <svg viewBox="0 0 1440 97" fill="none" id="svg-177258987_1568">
      <path
        d="M1280.45 0H159.546C133.625 0 108.146 6.71721 85.594 19.4967L-9.15527e-05 68H1440L1354.41 19.4967C1331.85 6.71722 1306.38 0 1280.45 0Z"
        fill="url(#svg-177258987_1568_paint0_linear_763_7)">
      </path>
      <path
        d="M159.546 0.5H1280.45C1306.29 0.5 1331.68 7.19483 1354.16 19.9317L1438.1 67.5H1.89644L85.8405 19.9317C108.317 7.19482 133.711 0.5 159.546 0.5Z"
        stroke="url(#svg-177258987_1568_paint1_linear_763_7)"
        stroke-opacity="0.1">
      </path>
      <rect x="-9.15527e-05" y="67" width="1440" height="30" fill="url(#svg-177258987_1568_paint2_linear_763_7)"></rect>
      <rect x="270" width="900" height="1" fill="url(#svg-177258987_1568_paint3_linear_763_7)"></rect>
      <defs>
        <linearGradient id="svg-177258987_1568_paint0_linear_763_7" x1="752.681" y1="-2.71596" x2="754.453" y2="134.209" gradientUnits="userSpaceOnUse">
