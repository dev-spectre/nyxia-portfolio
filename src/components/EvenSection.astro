---
import PrimaryButton from "./PrimaryButton.astro";
import SecondaryTitle from "./SecondaryTitle.astro";
import TitleCard from "./TitleCard.astro";

interface Props {
  primaryTitle: string;
  secondaryTitleMain: string;
  secondaryTitleSub: string;
  content: string;
  buttonLink: string;
  buttonText: string;
}

