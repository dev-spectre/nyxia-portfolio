---
interface Props {
  link: string;
  content: string;
}

const { link, content } = Astro.props;
---

<a
  href={link}
  class="bg-primary-400 relative isolate inline-flex items-center justify-center rounded-lg p-1">
  <span
    class="bg-primary-500 inline-block rounded-md px-3 py-1 text-white capitalize sm:py-2">
    {content}
  </span>
  <span
    class="bg-primary-500 absolute -z-10 h-1/2 w-[150%] rounded-full blur-2xl">
  </span>
</a>
